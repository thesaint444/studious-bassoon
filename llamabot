def main():
    print("Llama Bot: Hello! I'm Llama Bot. How can I help you today?")
    while True:
        user_input = input("You: ")
        if user_input.lower() in ["exit", "quit", "bye"]:
            print("Llama Bot: Goodbye!")
            break
        response = generate_response(user_input)
        print(f"Llama Bot: {response}")

if __name__ == "__main__":
    main()
